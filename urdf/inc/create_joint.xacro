<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="create_joint" params="
    name
    parent
    child
    origin
    axis
    min
    max
    velocity
    effort
  ">
  
    <joint name="{name}" type="revolute">
      <parent link="{parent}" />
      <child link="{child}" />
      <origin xyz="${origin}" rpy="0 0 0" />
      <axis xyz="${axis}" />
      <limit 
        effort="${effort}"
        lower="${min*pi/180}"
        upper="${max*pi/180}"
        velocity="${velocity*pi/180}"
      />
    </joint>
  </xacro:macro>
</robot>